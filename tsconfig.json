{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      ">/*": ["./src/ux/*"],
      ">api/*": ["./src/ux/api/*"],
      ">fx/*": ["./src/ux/effects/*"],
      ">comp/*": ["./src/ux/components/*"],
      ">util/*": ["./src/ux/util/*"],
      ">ui/*": ["./src/ux/ui/*"],
      ">hooks/*": ["./src/ux/hooks/*"],
      ">cn/*": ["./src/ux/shadcn/*"],
      "~/*": ["./public/*"],
      "ยง": ["./src/app/config"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": ["next-env.d.ts", "./src/**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "tailwind.config.js", "next.config.mjs"],
  "exclude": ["node_modules"]
}
